// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int     @id @default(autoincrement())
  name                  String
  email                 String  @unique
  password              String
  phoneNumber           String  @unique
  postalCode            String
  role                  Role
  additionalInformation String?
  sales                 Sale[]
}

model Product {
  id          Int       @id @default(autoincrement())
  image       String
  title       String
  description String
  quantity    Int
  value       Int
  category    Category? @relation(references: [id], fields: [categoryId], onDelete: SetNull, onUpdate: Cascade)
  categoryId  Int?
  orders      Order[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Sale {
  id            Int           @id @default(autoincrement())
  date          DateTime      @default(now())
  user          User          @relation(references: [id], fields: [userId], onDelete: Cascade, onUpdate: Cascade)
  userId        Int
  total         Int
  paymentMethod PaymentMethod
  orders        Order[]
}

model Order {
  id        Int     @id @default(autoincrement())
  sale      Sale    @relation(references: [id], fields: [saleId], onDelete: Cascade, onUpdate: Cascade)
  saleId    Int
  product   Product @relation(references: [id], fields: [productId], onDelete: Cascade, onUpdate: Cascade)
  productId Int
  quantity  Int
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  MONEY
}

enum Role {
  ADMIN
  COMMON
}
